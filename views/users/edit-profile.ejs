<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">Edit Profile</h1>
    <div class="col-md-6 offset-md-3">

        <form action="/user/<%= user._id %>?_method=PUT" class="needs-validation" method="post" novalidate>
            <div class="mb-3">
                <label class="form-label" for="bio">Bio</label>
                <textarea class="form-control color-custom text-white" type="text" name="bio" id="bio" cols="30" rows="10" placeholder="Introduce yourself!"><%= user.bio %></textarea>
            </div>
            <button class="btn btn-success mb-3">Edit Profile!</button>
        </form>
        <a href="/user/<%= user._id %>" class="btn btn-danger">Cancel</a>
    </div>
</div>