<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-body">
                    <div class="mb-3">
                        <span class="fw-bold">Author</span>
                        <%= post.date %>
                    </div>
                    <p class="card-text"><%= post.body %></p>
                </div>
                <div class="card-body">
                    <div class="d-md-flex">
                        <a href="/home/<%= post._id %>/edit" class="btn btn-sm btn-info me-2 edit-button mb-2">Edit</a>
                        <form action="/home/<%= post._id %>/?_method=DELETE" method="POST" class="d-inline"><button class="btn btn-sm btn-danger delete-button">Delete</button></form>
                    </div>
                </div>
            </div>
        </div>
    </div>